# Procur Database Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Database Settings
PROCUR_DB_HOST=localhost
PROCUR_DB_PORT=5432
PROCUR_DB_DATABASE=procur
PROCUR_DB_USERNAME=procur_user
PROCUR_DB_PASSWORD=procur_password

# Connection Pool Settings
PROCUR_DB_POOL_SIZE=5
PROCUR_DB_MAX_OVERFLOW=10
PROCUR_DB_POOL_TIMEOUT=30
PROCUR_DB_POOL_RECYCLE=3600

# SQLAlchemy Settings
PROCUR_DB_ECHO=false
PROCUR_DB_ECHO_POOL=false

# Alembic Settings
PROCUR_DB_ALEMBIC_INI_PATH=alembic.ini

# API Configuration
PROCUR_API_HOST=0.0.0.0
PROCUR_API_PORT=8000
PROCUR_API_RELOAD=false
PROCUR_API_WORKERS=4

# API Security
PROCUR_API_SECRET_KEY=change-this-to-a-secure-random-key-in-production
PROCUR_API_ALGORITHM=HS256
PROCUR_API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
PROCUR_API_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
PROCUR_API_RATE_LIMIT_ENABLED=true
PROCUR_API_RATE_LIMIT_PER_MINUTE=60
PROCUR_API_RATE_LIMIT_PER_HOUR=1000

# Password Policy
PROCUR_PASSWORD_MIN_LENGTH=12
PROCUR_PASSWORD_REQUIRE_UPPERCASE=true
PROCUR_PASSWORD_REQUIRE_LOWERCASE=true
PROCUR_PASSWORD_REQUIRE_DIGIT=true
PROCUR_PASSWORD_REQUIRE_SPECIAL=true
PROCUR_PASSWORD_MAX_AGE_DAYS=90
PROCUR_PASSWORD_PREVENT_REUSE_COUNT=5

# Account Security
PROCUR_MAX_FAILED_LOGIN_ATTEMPTS=5
PROCUR_ACCOUNT_LOCKOUT_DURATION_MINUTES=30
PROCUR_SESSION_TIMEOUT_MINUTES=60
PROCUR_SESSION_MAX_AGE_HOURS=24

# OAuth2/SSO Configuration (optional)
PROCUR_OAUTH_GOOGLE_CLIENT_ID=
PROCUR_OAUTH_GOOGLE_CLIENT_SECRET=
PROCUR_OAUTH_MICROSOFT_CLIENT_ID=
PROCUR_OAUTH_MICROSOFT_CLIENT_SECRET=
PROCUR_OAUTH_MICROSOFT_TENANT_ID=common
PROCUR_OAUTH_OKTA_CLIENT_ID=
PROCUR_OAUTH_OKTA_CLIENT_SECRET=
PROCUR_OAUTH_OKTA_DOMAIN=
PROCUR_OAUTH_REDIRECT_URI=http://localhost:8000/auth/oauth/callback

# Event Bus Configuration
PROCUR_EVENT_REDIS_HOST=localhost
PROCUR_EVENT_REDIS_PORT=6379
PROCUR_EVENT_REDIS_DB=0
PROCUR_EVENT_REDIS_PASSWORD=
PROCUR_EVENT_REDIS_SSL=false

# Event Stream Settings
PROCUR_EVENT_EVENT_STREAM_NAME=procur:events
PROCUR_EVENT_EVENT_CONSUMER_GROUP=procur-workers
PROCUR_EVENT_EVENT_BATCH_SIZE=10
PROCUR_EVENT_EVENT_BLOCK_TIME=1000

# Dead Letter Queue
PROCUR_EVENT_DLQ_ENABLED=true
PROCUR_EVENT_DLQ_STREAM_NAME=procur:dlq
PROCUR_EVENT_DLQ_MAX_RETRIES=3

# Event Sourcing
PROCUR_EVENT_EVENT_SOURCING_ENABLED=true
PROCUR_EVENT_EVENT_STORE_RETENTION_DAYS=90

# Monitoring
PROCUR_EVENT_MONITORING_ENABLED=true
PROCUR_EVENT_METRICS_PORT=9090

# Slack Integration
PROCUR_SLACK_BOT_TOKEN=
PROCUR_SLACK_SIGNING_SECRET=
PROCUR_SLACK_APP_TOKEN=
PROCUR_SLACK_DEFAULT_CHANNEL=

# DocuSign Integration
PROCUR_DOCUSIGN_INTEGRATION_KEY=
PROCUR_DOCUSIGN_USER_ID=
PROCUR_DOCUSIGN_ACCOUNT_ID=
PROCUR_DOCUSIGN_PRIVATE_KEY=
PROCUR_DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi
PROCUR_DOCUSIGN_WEBHOOK_SECRET=

# ERP Integration (SAP)
PROCUR_ERP_TYPE=sap
PROCUR_SAP_BASE_URL=
PROCUR_SAP_CLIENT_ID=
PROCUR_SAP_CLIENT_SECRET=
PROCUR_SAP_COMPANY_CODE=

# ERP Integration (NetSuite)
PROCUR_NETSUITE_ACCOUNT_ID=
PROCUR_NETSUITE_CONSUMER_KEY=
PROCUR_NETSUITE_CONSUMER_SECRET=
PROCUR_NETSUITE_TOKEN_ID=
PROCUR_NETSUITE_TOKEN_SECRET=

# Email Service (SendGrid)
PROCUR_EMAIL_SERVICE=sendgrid
PROCUR_SENDGRID_API_KEY=
PROCUR_SENDGRID_FROM_EMAIL=

# Email Service (AWS SES)
PROCUR_AWS_ACCESS_KEY_ID=
