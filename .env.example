# Procur Database Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Database Settings
PROCUR_DB_HOST=localhost
PROCUR_DB_PORT=5432
PROCUR_DB_DATABASE=procur
PROCUR_DB_USERNAME=procur_user
PROCUR_DB_PASSWORD=procur_password

# Connection Pool Settings
PROCUR_DB_POOL_SIZE=5
PROCUR_DB_MAX_OVERFLOW=10
PROCUR_DB_POOL_TIMEOUT=30
PROCUR_DB_POOL_RECYCLE=3600

# SQLAlchemy Settings
PROCUR_DB_ECHO=false
PROCUR_DB_ECHO_POOL=false

# Alembic Settings
PROCUR_DB_ALEMBIC_INI_PATH=alembic.ini

# API Configuration
PROCUR_API_HOST=0.0.0.0
PROCUR_API_PORT=8000
PROCUR_API_RELOAD=false
PROCUR_API_WORKERS=4

# API Security
PROCUR_API_SECRET_KEY=change-this-to-a-secure-random-key-in-production
PROCUR_API_ALGORITHM=HS256
PROCUR_API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
PROCUR_API_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
PROCUR_API_RATE_LIMIT_ENABLED=true
PROCUR_API_RATE_LIMIT_PER_MINUTE=60
PROCUR_API_RATE_LIMIT_PER_HOUR=1000
